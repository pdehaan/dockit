<div class="nav transformer">

  <span class="ctrl-pages ctrl transformer">pages</span>
  <span class="ctrl-files ctrl transformer">files</span>
  {?showall}
  <a href="{?index}{index}{:else}all.html{/index}"><span class="ctrl-all ctrl active transformer">âˆž</span></a>
  {/showall}

  <ol id="files" class="menu hidden">
    {#files}
    <a class="nav-item nav-{key}" href="{key}.html#__file">
      <li {@if cond="'{current}'=='{key}'"}class="active"{/if}>
        <span class="dir">{dir}</span>
        <span class="file">{file}</span>
      </li>
    </a>
    {/files}
  </ol>

  {?pages}
  <ol id="pages" class="menu">
    {#pages}
    <a class="nav-item nav-{key}-s{section}" href="{?showall}{all}{:else}{key}.html{/showall}#{key}-s{section}">
      <li class="h{h}" >{page}</li>
    </a>
    {/pages}
  </ol>
  {/pages}

  <p id="generated">generated {generated}</p>
</div>
