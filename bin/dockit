#!/usr/bin/env node

var program = require('commander'),
    dockit = require('../'),
    path = require('path');

// support json5
require('json5/lib/require');

program
  .version(require('../package.json').version)
  .option('-c, --config [file]', 'specify location of config file');


program.on('--help', function(){
  console.log('  document files from comments');
  console.log('  will use .dockit.json for config if available');
});

program.parse(process.argv);

var config;

if(program.config) {
  config = path.join(process.cwd(),program.config);
} else {
  config = path.join(process.cwd(),'.dockit');
}

try {
  config = require(config);
} catch (e) {
  console.log(e);
  process.exit(1);
}

if(!config.files){
  console.log("dockit ERROR: no input files");
  process.exit(1);
} else {
  if(config.files instanceof Array){
    config.files = {all : config.files};
  }
}

config.output = config.output || 'docs';
config.github = config.github || {};
if(config.github.url !== undefined & config.github.text === undefined){
  config.github.text = "github";
}

dockit(config);